<Window x:Class="CheckersUI.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheckersUI"
        mc:Ignorable="d"
        Title="MenuWindow"
        Height="414" Width="884" Background="#FF232537">
    <Canvas>
        <TextBlock DockPanel.Dock="Left" Text="Start Game" FontSize="30" Foreground="White" 
                   FontFamily="Dubai Medium" Height="55" Width="142" 
                   Canvas.Left="379" Canvas.Top="27"
                   HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <Button DockPanel.Dock="Left" Content="Start" Height="90" 
                Canvas.Left="272" Canvas.Top="84" Width="356" 
                HorizontalAlignment="Center" VerticalAlignment="Top" 
                FontFamily="Dubai" FontSize="40" Background="#FF8DAAB3"
                Click="StartGame"/>
    </Canvas>
</Window>
